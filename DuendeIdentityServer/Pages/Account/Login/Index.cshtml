@page
@model DuendeIdentityServer.Pages.Account.Login.Index

<div class="login-page">
    <div class="lead">
        <h1>Logowanie</h1>
        <p>Wprowadź swoje dane logowania</p>
    </div>

    <partial name="_ValidationSummary"/>

    <div class="row">

        @if (Model.View.EnableLocalLogin)
        {
            <div class="col-sm-6">
                <div class="card">
                    <div class="card-header">
                        <h2>Okno logowania</h2>
                    </div>

                    <div class="card-body">
                        <form asp-page="/Account/Login/Index">
                            <input type="hidden" asp-for="Input.ReturnUrl"/>

                            <div class="form-group">
                                <label asp-for="Input.Username">Nazwa użytkownika</label>
                                <input class="form-control" placeholder="Nazwa użytkownika" asp-for="Input.Username" autofocus>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.Password">Hasło</label>
                                <input type="password" class="form-control" placeholder="Hasło" asp-for="Input.Password" autocomplete="off">
                            </div>

                            @if (Model.View.AllowRememberLogin)
                            {
                                <div class="form-group">
                                    <div class="form-check">
                                        <input class="form-check-input" asp-for="Input.RememberLogin">
                                        <label class="form-check-label" asp-for="Input.RememberLogin">
                                            Zapamietaj mnie
                                        </label>
                                    </div>
                                </div>
                            }

                            <button class="btn btn-primary" name="Input.Button" value="login">Zaloguj</button>
                            <a class="btn btn-info" href="~/Account/Register?returnUrl=@Model.Input.ReturnUrl.">Nie masz konta? Zarejestruj się!</a>
                            @* <button class="btn btn-secondary" name="Input.Button" value="cancel">Anuluj</button> *@
                        </form>
                    </div>
                </div>
            </div>
        }

        @if (!Model.View.EnableLocalLogin && !Model.View.VisibleExternalProviders.Any())
        {
            <div class="alert alert-warning">
                <strong>Niepoprawne dane logowania</strong>
                There are no login schemes configured for this request.
            </div>
        }
    </div>
</div>