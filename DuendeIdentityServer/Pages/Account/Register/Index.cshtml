@page
@model DuendeIdentityServer.Pages.Account.Register.Index

<div class="login-page">
    <div class="lead">
        <h1>Rejestracja</h1>
    </div>

    <partial name="_ValidationSummary"/>

    <div class="row">
        <div class="col-sm-6">
            <div class="card">
                <div class="card-body">
                    <form asp-page="/Account/Register/Index">
                        <input type="hidden" asp-for="RegisterVm.ReturnUrl"/>
                        <div class="form-group">
                            <label asp-for="RegisterVm.FirstName"></label>
                            <input class="form-control" placeholder="Imię" asp-for="RegisterVm.FirstName" autofocus>
                        </div>
                        <div class="form-group">
                            <label asp-for="RegisterVm.LastName"></label>
                            <input class="form-control" placeholder="Nazwisko" asp-for="RegisterVm.LastName" autofocus>
                        </div>
                        <div class="form-group">
                            <label asp-for="RegisterVm.Username"></label>
                            <input class="form-control" placeholder="Nazwa użytkownika" asp-for="RegisterVm.Username" autofocus>
                        </div>
                        <div class="form-group">
                            <label asp-for="RegisterVm.Email"></label>
                            <input type="email" class="form-control" placeholder="Email" asp-for="RegisterVm.Email" autofocus>
                        </div>
                        <div class="form-group">
                            <label asp-for="RegisterVm.Password"></label>
                            <input type="password" class="form-control" placeholder="Hasło" asp-for="RegisterVm.Password" autofocus>
                        </div>

                        <div class="form-group">
                            <label asp-for="RegisterVm.ConfirmPassword"></label>
                            <input type="password" class="form-control" placeholder="Powtórz hasło" asp-for="RegisterVm.ConfirmPassword" autofocus>
                        </div>

                        <button class="btn btn-primary" name="RegisterVm.ButtonAction" value="register">Zarejestruj</button>
                        @* <button class="btn btn-secondary" name="RegisterVm.ButtonAction" value="cancel">Anuluj</button> *@
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>